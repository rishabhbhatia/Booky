<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_category"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/extra_large_padding"
    card_view:cardCornerRadius="7dp"
    card_view:contentPadding="0dp"
    android:layout_gravity="center_horizontal"
    card_view:cardBackgroundColor="@android:color/black"
    >

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/extra_small_padding"
        card_view:cardCornerRadius="7dp"
        card_view:contentPadding="0dp"
        card_view:cardBackgroundColor="@android:color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_category_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/main_landing_category_popular"
                android:paddingTop="@dimen/extra_large_padding"
                android:paddingBottom="@dimen/extra_large_padding"
                android:paddingLeft="@dimen/extra_extra_large_padding"
                android:paddingRight="@dimen/extra_extra_large_padding"
                android:background="@android:color/black"
                style="@style/Landing_Category_Label"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_category_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/main_landing_category_recent"
                style="@style/Landing_Category_Label"
                android:textColor="@android:color/black"
                android:paddingTop="@dimen/extra_large_padding"
                android:paddingBottom="@dimen/extra_large_padding"
                android:paddingLeft="@dimen/extra_extra_large_padding"
                android:paddingRight="@dimen/extra_extra_large_padding"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.v7.widget.CardView>
