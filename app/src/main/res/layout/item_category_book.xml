<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium_padding"
    android:id="@+id/prl_item_category_book"
    android:layout_centerInParent="true"
    >

    <LinearLayout
        android:id="@+id/ll_item_category_book_image_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/iv_item_category_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/small_padding"
        android:layout_below="@+id/ll_item_category_book_image_holder"
        >

        <TextView
            android:id="@+id/tv_item_category_book_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:text="Rishabh's Cave"
            android:gravity="center|left|start"
            android:paddingLeft="@dimen/medium_padding"
            android:paddingStart="@dimen/medium_padding"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_item_category_book_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:text="Rs. 125"
            android:gravity="left|top"
            android:maxLines="1"
            android:paddingLeft="@dimen/medium_padding"
            android:paddingStart="@dimen/medium_padding"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            />

    </LinearLayout>

</RelativeLayout>