<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:alpha="0.4"
        >

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"
        android:layout_above="@+id/tv_splash_app_name"
        />

    <TextView
        android:id="@+id/tv_splash_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_above="@+id/tv_splash_tagline"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_marginBottom="@dimen/extra_extra_large_padding"
        />

    <TextView
        android:id="@+id/tv_splash_tagline"
        android:layout_above="@+id/tv_splash_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="7"
        android:text="@string/splash_tagline"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:ellipsize="end"
        android:textSize="15sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_splash_author"
        android:layout_above="@+id/progress_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_margin="@dimen/medium_padding"
        android:textSize="12sp"
        android:ellipsize="end"
        />

    <ProgressBar
        android:id="@+id/progress_splash"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:indeterminate="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/small_padding"
        />

</RelativeLayout>